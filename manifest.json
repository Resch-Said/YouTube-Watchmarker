{
  "manifest_version": 3,
  "name": "YouTube Watchmarker",
  "version": "1.0",
  "description": "Markiert alle gesehenen YouTube Videos und Shorts.",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
