{
  "manifest_version": 3,
  "name": "YouTube Watchmarker",
  "version": "1.0.0",
  "description": "Markiert gesehene YouTube Videos",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["src/content.js"],
      "css": ["src/popup/popup.css"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  }
}
