{
  "manifest_version": 3,
  "name": "YouTube Watchmarker",
  "version": "1.0.0",
  "description": "Markiert gesehene YouTube Videos",
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  }
}
